
{
    "manifest_version": 3,
    "name": "ProductivityViz",
    "version": "0.1.0",
    "description": "Visualizes the time took to solve particular type of question",
   
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "cookies"
        
        
    ],
    "host_permissions": [
         "http://localhost:3001/*"
         
         
    ],
    "web_accessible_resources": [
        {
            "resources": ["pause.png",
                "play-button-arrowhead.png"],
                "matches": ["https://codeforces.com/*"]
        }
        
    ],
       "icons": { 
              
           "48": "Logo.png",
           "128": "Logo128.png"
           },
    "content_scripts":[
           {
                  "matches": ["https://codeforces.com/problemset/problem/*"],
                  "js":["SecondTimer.js"],
                  "css": ["styles.css"]
                  
           },
           {
               "matches": ["https://codeforces.com/problemset/status/*", "https://codeforces.com/problemset/status?my=on", "https://codeforces.com/problemset/status?friends=on"],
               "js": ["sendTime.js"],
               "css": ["containerTimer.css"]
           }
    ],
    "background": {
        "service_worker": "background.js"
       
    }
    
    
}
